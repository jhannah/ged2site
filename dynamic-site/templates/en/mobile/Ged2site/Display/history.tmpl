<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
    "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
	<head>
		<title>Family History of [% SiteTitle.join(' ') %]</title>
		<meta http-equiv="Content-Language" content="English">
		<!--
		<meta name="msvalidate.01" content="deadbeef" />
		-->
		<style>
			body {
				font-family: "Lucida Grande",Helvetica,Arial,Verdana,sans-serif;
				font-size: 2;
			}
		</style>
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>
	<body>
		<center>
			<h1>Family History of [% SiteTitle.join(' ') %]</h1>
			[ <a href="?page=people&home=1">Home</a> ] | [ <a href="?page=censuses">Census Index</a> ] | [ <a href="?page=surnames">Surname Index</a> ]
		</center>
		[% IF error %]
			<p><font color="red" size="+2">[% error %]</font></p>
		[% END %]
		[% USE day = date(format = '%e %B', locale = lingua.language_code_alpha2) %]
		[% FOREACH year IN events.keys.sort %]
			<h2>[% year %]</h2>
			<ul>
				[% FOREACH event IN events.$year %]
					<li>
						[% day.format("0:0:0 $event.day:$event.month:$year") %]
						<a href="?page=people&entry=[% event.person %]">[% event.title %]</a>:
						[% event.event %]
					</li>
				[% END %]
			</ul>
		[% END %]
		<p>
			<i>
			Generated by <a href="https://github.com/nigelhorne/ged2site">ged2site</a>.
			[% IF updated %]
				[% USE date %]
				Last updated on [% date.format(time = updated, format = '%d %b %Y', locale = lingua.language_code_alpha2) %]
			[% END %]
			</i>
		</p>
	</body>
</html>
