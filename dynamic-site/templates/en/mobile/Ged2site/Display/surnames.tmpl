<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
    "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
	<head>
		[% IF surname %]
			<title>Entries for the Surname [% surname %] in [% SiteTitle.join(' ') %]</title>
		[% ELSE %]
			<title>Surnames for [% SiteTitle.join(' ') %]</title>
		[% END %]
		<meta http-equiv="Content-Language" content="English">
		<!--
		<meta name="msvalidate.01" content="deadbeef" />
		-->
		<link rel="stylesheet" href="/css/mobile.css" type="text/css" media="screen">
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>
	<body>
		<center>
			[% IF surname %]
				<h1>Entries for the Surname [% surname %] in [% SiteTitle.join(' ') %]</h1>
			[% ELSE %]
				<h1>Surnames for [% SiteTitle.join(' ') %]</h1>
			[% END %]
			[% IF error %]
				<p><font color="red" size="+2">[% error %]</font></p>
			[% END %]
			[ <a href="?page=people&amp;home=1">Home Person</a> ]<br>
			[ <a href="?page=censuses">Census Index</a> ]<br>
			[ <a href="?page=history">Family History</a> ]<br>
			[ <a href="?page=reports">Reports</a> ]<br>
			[ <a href="?page=calendar">Calendar</a> ]
		</center>
		[% IF surnames %]
			<dl>
				[% FOREACH surname IN surnames %]
					[% IF surname.surname.substr(0,1) != initial %]
						[% IF initial %]
							</dd>
						[% END %]
						[% IF surname == 'UNKNOWN' %]
							[% initial = '?' %]
						[% ELSE %]
							<!-- FIXME:
								if it starts with an entity,
								initial will be set to '&'
							-->
							[% initial = surname.surname.substr(0,1) %]
						[% END %]
						<dt>[% initial %]</dt><dd>
					[% END %]
					<a href="?page=surnames&amp;surname=[%- surname.surname | uri -%]">[% surname.surname %]</a>
				[% END %]
			</dd></dl>
		[% ELSIF people %]
			<ul>
				[% FOREACH person IN people %]
					<li>
						<a href="?page=people&amp;entry=[%- person.entry %]">[% person.title %]</a>
					</li>
				[% END %]
			</ul>
		[% END %]
		<p align="right">
			<i>
			Generated by <a href="//github.com/nigelhorne/ged2site">Ged2Site</a>.
			[% IF updated %]
				[% USE date %]
				Last updated on [% date.format(time = updated, format = '%d %b %Y', locale = lingua.language_code_alpha2) %]
			[% END %]
			</i>
		</p>
		<!-- https://www.w3schools.com/howto/howto_js_collapsible.asp -->
			<script>
			var coll = document.getElementsByClassName("collapsible");
			var i;

			for (i = 0; i < coll.length; i++) {
			  coll[i].addEventListener("click", function() {
			    this.classList.toggle("active");
			    var content = this.nextElementSibling;
			    if (content.style.maxHeight){
			      content.style.maxHeight = null;
			    } else {
			      content.style.maxHeight = content.scrollHeight + "px";
			    }
			  });
			}
		</script>
	</body>
</html>
