		<style type="text/css">
			/* Two columns */
			.column {
				float: left;
				width: 50%;
			}

			/* Clear floats after the columns */
			.row:after {
				content: "";
				display: table;
				clear: both;
			}
		</style>
		[% IF datapoints.M %]
			<script src="//cdnjs.cloudflare.com/ajax/libs/canvasjs/1.7.0/canvasjs.min.js"></script>
			<script type="text/javascript">

			window.onload = function () {
				var chartM = new CanvasJS.Chart("chartContainerM", {
					theme: "theme1",	//theme2
					title: {
						text: "[% title %] (Men)"
					},
					zoomEnabled: false,
					axisY: {
						[% IF graph == 'ageatdeath' %]
							includeZero: false,
							title: '&Acirc;ge at Death',
						[% ELSIF graph == 'percentagedying' %]
							title: 'Percentage',
						[% END %]
						gridThickness: 0
					},
					[% IF graph == 'ageatdeath' %]
						axisX: {
							title: 'Year of Death'
						},
					[% END %]
					toolTip: {
						shared:true
					},
					legend: {
						verticalAlign: "center",
						horizontalAlign: "right"
					},
					animationEnabled: true,	// change to false
					data: [
						{
							// Change type to "bar", "area", "spline", "pie","column" etc.
							type: "line",
							showInLegend: true,
							[% IF graph == 'ageatdeath' %]
								name: "Values",
							[% END %]
							color: "#F08080",
							dataPoints: [
								[% datapoints.M %]
							]
						},
						[% IF bestfit.M %]
							{
								// Change type to "bar", "area", "spline", "pie","column" etc.
								type: "line",
								[% IF graph == 'ageatdeath' %]
									lineDashType: "dash",
									connectNullData: true,
									nullDataLineDashType: "dot",
									name: "Trend",
								[% END %]
								showInLegend: true,
								color: "#20B2AA",
								dataPoints: [
									[% bestfit.M %]
								]
							},
						[% END %]
					],
					legend: {
						cursor: "pointer",
						itemclick:function(e){
							if (typeof(e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
								e.dataSeries.visible = false;
							} else{
								e.dataSeries.visible = true;
							}
							chartM.render();
						}
					}
				});
				var chartF = new CanvasJS.Chart("chartContainerF", {
					theme: "theme1",	//theme2
					title: {
						text: "[% title %] (Women)"
					},
					zoomEnabled: false,
					axisY: {
						[% IF graph == 'ageatdeath' %]
							includeZero: false,
							title: '&Acirc;ge at Death',
						[% END %]
						gridThickness: 0
					},
					[% IF graph == 'ageatdeath' %]
						axisX: {
							title: 'Year of Death'
						},
					[% END %]
					toolTip: {
						shared:true
					},
					legend: {
						verticalAlign: "center",
						horizontalAlign: "right"
					},
					animationEnabled: true,	// change to false
					data: [
						{
							// Change type to "bar", "area", "spline", "pie","column" etc.
							type: "line",
							showInLegend: true,
							[% IF graph == 'ageatdeath' %]
								name: "Values",
							[% END %]
							color: "#F08080",
							dataPoints: [
								[% datapoints.F %]
							]
						},
						[% IF bestfit.F %]
						{
							// Change type to "bar", "area", "spline", "pie","column" etc.
							type: "line",
							[% IF graph == 'ageatdeath' %]
								lineDashType: "dash",
								connectNullData: true,
								nullDataLineDashType: "dot",
								name: "Trend",
							[% END %]
							showInLegend: true,
							color: "#20B2AA",
							dataPoints: [
								[% bestfit.F %]
							]
						},
						[% END %]
					],
					legend: {
						cursor: "pointer",
						itemclick:function(e){
							if (typeof(e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
								e.dataSeries.visible = false;
							} else{
								e.dataSeries.visible = true;
							}
							chartF.render();
						}
					}
				});
				chartM.render();
				chartF.render();
			}
			</script>
		[% ELSIF datapoints %]
			<script src="//cdnjs.cloudflare.com/ajax/libs/canvasjs/1.7.0/canvasjs.min.js"></script>
			<script type="text/javascript">

			window.onload = function () {
				var chart = new CanvasJS.Chart("chartContainer", {
					theme: "theme1",	//theme2
					title:{
						text: "[% title %]"
					},
					axisY: {
						[% IF graph == 'dist' %]
							title: '[% units %]',
						[% ELSIF graph == 'familysizetime' %]
							title: "Nombre des enfants",
						[% ELSIF graph == 'motherchildren' %]
							title: "Nombre des m√®res",
							includeZero: false,
						[% ELSIF graph == 'infantdeaths' %]
							title: 'Percentage',
						[% ELSIF graph == 'distcount' %]
							title: "Nombres des gens",
						[% END %]
						gridThickness: 0
					},
					[% IF graph == 'firstborn' %]
						axisX: {
							title: "Months",
							interval: 6,
							intervalType: "mois"
						},
						zoomEnabled: true,
					[% ELSIF graph == 'dist' %]
						zoomEnabled: true,
					[% ELSIF graph == 'distcount' %]
						zoomEnabled: true,
						axisX: {
							title: '[% units %]'
						},
					[% ELSIF graph == 'motherchildren' %]
						axisX: {
							title: "Nombre des enfants",
						},
					[% END %]
					animationEnabled: true,	// change to false
					data: [
						{
							// Change type to "bar", "area", "spline", "pie","column" etc.
							[% IF graph == 'birthmonth' || graph == 'marriagemonth' || graph == 'deathmonth' || graph == 'firstborn' || graph == 'motherchildren' %]
								type: "column",
							[% ELSE %]
								type: "line",
							[% END %]
							dataPoints: [
								[% datapoints %]
							]
						}
					]
				});
				chart.render();
			}
			</script>
		[% ELSIF mdatapoints && fdatapoints %]
			<script src="//cdnjs.cloudflare.com/ajax/libs/canvasjs/1.7.0/canvasjs.min.js"></script>
			<script type="text/javascript">

			window.onload = function () {
				var chart = new CanvasJS.Chart("chartContainer", {
					theme: "theme1",	//theme2
					title: {
						text: "[% title %]"
					},
					[% IF graph == 'sex' %]
						zoomEnabled: true,
					[% END %]
					axisY: {
						[% IF graph == 'sex' %]
							title: 'Percentage',
							minimum: 0,
							maximum: 100,
						[% END %]
						gridThickness: 0
					},
					[% IF graph == 'ageatmarriage' %]
					axisX: {
						title: 'Year of Marriage'
					},
					[% END %]
					toolTip: {
						shared:true
					},
					legend: {
						verticalAlign: "center",
						horizontalAlign: "right"
					},
					animationEnabled: true,	// change to false
					data: [
						{
							// Change type to "bar", "area", "spline", "pie","column"etc.
							type: "line",
							showInLegend: true,
							name: "Male",
							color: "#F08080",
							dataPoints: [
								[% mdatapoints %]
							]
						}, {
							// Change type to "bar", "area", "spline", "pie","column"etc.
							type: "line",
							name: "Female",
							showInLegend: true,
							color: "#20B2AA",
							dataPoints: [
								[% fdatapoints %]
							]
						},
					],
					legend: {
						cursor: "pointer",
						itemclick:function(e){
							if (typeof(e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
								e.dataSeries.visible = false;
							} else{
								e.dataSeries.visible = true;
							}
							chart.render();
						}
					}
				});
				chart.render();
			}
			</script>
		[% END %]
